{
  "name": "ebook-speaker",
  "version": "1.0.0",
  "description": "A web server to read ebooks aloud with better text-to-speech than apple's default page reader",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"node server.js\" \"cd client && PORT=3000 npm start\"",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "epub2": "^3.0.2",
    "path": "^0.12.7",
    "fs": "^0.0.1-security",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["ebook", "epub", "text-to-speech", "reader", "react"],
  "author": "",
  "license": "ISC"
}
